{
  "name": "exegesis-typescript-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "node --inspect=5858 -r ts-node/register ./dev/src/index.ts",
    "start:watch": "nodemon",
    "setup": "npm install",
    "typedoc": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./dev/",
    "posttypedoc": "shx cp .nojekyll docs/.nojekyll",
    "build": "tsc --build --clean && tsc",
    "build-watch": "tsc --watch",
    "test": "mocha -r ts-node/register dev/**/*.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {},
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "dev"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.7",
    "@types/mocha": "^8.0.1",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.0.27",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.6.0",
    "eslint-plugin-import": "^2.22.0",
    "mocha": "^8.1.1",
    "nodemon": "^2.0.4",
    "shx": "^0.3.2",
    "ts-node": "^8.10.2",
    "typedoc": "^0.18.0",
    "typescript": "^3.9.7"
  }
}
