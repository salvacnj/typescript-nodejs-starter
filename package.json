{
  "name": "exegesis-typescript-example",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "watch": "nodemon",
    "start:watch:logs": "DEBUG=express:router,mogoose  nodemon",
    "setup": "npm install",
    "typedoc": "typedoc --out ./docs --mode modules --tsconfig ./tsconfig.json ./src",
    "posttypedoc": "shx cp .nojekyll docs/.nojekyll",
    "build": "tsc --build --clean && tsc",
    "build-watch": "tsc --watch",
    "test": "mocha -r ts-node/register src/**/*.spec.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "exegesis-express": "^2.0.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.10.9",
    "mongoose-autopopulate": "^0.12.2",
    "swagger-ui-express": "^4.1.4"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src",
      "./openapi.yaml"
    ],
    "exec": "npm start",
    "ext": "ts"
  },
  "devDependencies": {
    "@types/chai-http": "^4.2.0",
    "@types/express": "^4.17.8",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.11.8",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^7.11.0",
    "eslint-plugin-import": "^2.22.1",
    "mocha": "^8.1.3",
    "nodemon": "^2.0.4",
    "shx": "^0.3.2",
    "ts-node": "^8.10.2",
    "typedoc": "^0.18.0",
    "typescript": "^3.9.7"
  }
}
